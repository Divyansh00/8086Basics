                <Button android:id="@+id/program28" android:textColor="#089c8b" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="STRING COMPARISSION"  />
                <Button android:id="@+id/program29" android:textColor="#089c8b" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="DISPLAY WITH DELAY"  />
