                <Button android:id="@+id/program31" android:textColor="#089c8b" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TO GENERATE SAWTOOTH WAVE"  />
                <Button android:id="@+id/program32" android:textColor="#089c8b" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TO GENERATE TRIANGULAR WAVE"  />-->
            </LinearLayout>
            <TextView android:layout_width="match_parent" android:layout_height="100px" />
